名字 = "测试"
剩余金额 = 100
state main:
    speak(名字 + "请问有什么可以帮您")
    match @(5,2)listen():
         "投诉" =>
            branch compain
         "账单" =>
            branch bill
         slience =>
            speak("听不见，请再说一遍")
            branch main
state compain:
    speak("你的投诉是什么")
    str = listen()
    branch thanks

state thanks:
    speak("感谢您的来电")

state bill:
    speak("您的本月账单是"+ 剩余金额 + "元")



